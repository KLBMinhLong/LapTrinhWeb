@model DeThi
@{
    ViewData["Title"] = "Chỉnh sửa đề thi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var deThiId = ViewBag.DeThiId;
}

<h2 class="mb-4 fw-bold text-center text-primary">Chỉnh Sửa Đề Thi</h2>
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@deThiId" method="post">
                    <div class="mb-3">
                        <label asp-for="TenDeThi" class="form-label">Tên Đề Thi</label>
                        <input asp-for="TenDeThi" class="form-control" />
                        <span asp-validation-for="TenDeThi" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ThoiGianLamBai" class="form-label">Thời Gian Làm Bài (phút)</label>
                        <input asp-for="ThoiGianLamBai" class="form-control" />
                        <span asp-validation-for="ThoiGianLamBai" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="TrangThaiMo" class="form-check-input" type="checkbox" id="TrangThaiMo" />
                        <label asp-for="TrangThaiMo" class="form-check-label" for="TrangThaiMo">Mở đề thi</label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ChuDeId" class="form-label">Chủ đề</label>
                        <select asp-for="ChuDeId" class="form-control" asp-items="ViewBag.ChuDeId">
                            <option value="">-- Chọn chủ đề --</option>
                        </select>
                        <span asp-validation-for="ChuDeId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SoLuongCauHoi" class="form-label">Số lượng câu hỏi</label>
                        <input asp-for="SoLuongCauHoi" class="form-control" />
                        <span asp-validation-for="SoLuongCauHoi" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save me-1"></i> Lưu thay đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
