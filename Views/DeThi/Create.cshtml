@model DeThi
@{
    ViewData["Title"] = "Tạo đề thi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4 fw-bold text-center text-primary">Tạo Đề Thi</h2>
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="TenDeThi" class="form-label">Tên Đề Thi</label>
                        <input asp-for="TenDeThi" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ThoiGianLamBai" class="form-label">Thời Gian Làm Bài (phút)</label>
                        <input asp-for="ThoiGianLamBai" class="form-control" />
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="TrangThaiMo" class="form-check-input" type="checkbox" id="TrangThaiMo" />
                        <label asp-for="TrangThaiMo" class="form-check-label" for="TrangThaiMo">Mở đề thi</label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ChuDeId" class="form-label">Chủ đề</label>
                        <select asp-for="ChuDeId" class="form-control" asp-items="ViewBag.ChuDeId">
                            <option value="">-- Chọn chủ đề --</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="SoLuongCauHoi" class="form-label">Số lượng câu hỏi</label>
                        <input type="number" class="form-control" name="SoLuongCauHoi" min="1" required />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Trở lại</a>
                        <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle me-1"></i> Tạo đề thi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
