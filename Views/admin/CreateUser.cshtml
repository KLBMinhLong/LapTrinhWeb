@model ThiTracNghiem.Models.TaiKhoan

@{
    ViewData["Title"] = "Tạo tài khoản mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-center mt-5">
    <div class="w-50">

        <h2 class="mb-4 fw-bold text-center text-primary">Tạo tài khoản mới</h2>

        <form asp-action="CreateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="TenTaiKhoan" class="form-label fw-bold">Tên Tài khoản</label>
                <input asp-for="TenTaiKhoan" class="form-control" placeholder="Nhập tên tài khoản" />
                <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MatKhau" class="form-label fw-bold">Mật Khẩu</label>
                <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NgaySinh" class="form-label fw-bold">Ngày Sinh</label>
                <input asp-for="NgaySinh" type="date" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GioiTinh" class="form-label fw-bold">Giới Tính</label>
                <select asp-for="GioiTinh" class="form-select">
                    <option value="">-- Chọn giới tính --</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
                <span asp-validation-for="GioiTinh" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SoDienThoai" class="form-label fw-bold">Số Điện Thoại</label>
                <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="VaiTro" class="form-label fw-bold">Vai Trò</label>
                <select asp-for="VaiTro" class="form-select">
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>
                <span asp-validation-for="VaiTro" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="TrangThaiKhoa" />
                <label class="form-check-label fw-bold" asp-for="TrangThaiKhoa">Trạng Thái Khóa</label>
            </div>

            <div class="mb-3">
                <label asp-for="AnhDaiDienUrl" class="form-label fw-bold">Ảnh Đại Diện URL</label>
                <input asp-for="AnhDaiDienUrl" class="form-control" placeholder="URL ảnh đại diện (tuỳ chọn)" />
                <span asp-validation-for="AnhDaiDienUrl" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary">Lưu tài khoản</button>
                <a asp-action="QuanLyNguoiDung" class="btn btn-secondary">Quay về danh sách</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
