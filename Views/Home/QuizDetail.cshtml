@model LapTrinhWeb.Models.ViewModels.ChiTietDeThiViewModel
@{
    ViewData["Title"] = "Chi tiết đề thi";
}
<div class="container py-4">
    <div class="card mb-4">
        <div class="card-body">
            <h3 class="card-title text-primary mb-3">@Model.DeThi.TenDe</h3>
            <p class="text-secondary mb-2">@Model.DeThi.MoTa</p>
            <ul class="list-unstyled mb-3">
                <li><strong>Chủ đề:</strong> @Model.DeThi.ChuDe?.TenChuDe</li>
                <li><strong>Thời gian:</strong> @Model.DeThi.ThoiGianPhut phút</li>
                <li><strong>Số câu hỏi:</strong> @Model.DeThi.SoCauHoi</li>
                <li><strong>Độ khó:</strong> @Model.DeThi.DoKho</li>
                <li><strong>Ngày tạo:</strong> @Model.DeThi.NgayTao.ToString("yyyy-MM-dd")</li>
            </ul>
            <a href="@Url.Action("Exam", "Thi")" class="btn btn-primary">Bắt đầu làm bài</a>
        </div>
    </div>
</div>
